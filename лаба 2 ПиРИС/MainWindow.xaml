<Window x:Class="лаба_2_ПиРИС.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:лаба_2_ПиРИС"
        mc:Ignorable="d"
        Title="MainWindow" Height="230" Width="390">
    <Grid>
        <Button x:Name="bEnter" Content="Войти"
HorizontalAlignment="Left" Margin="190,122,0,0"
VerticalAlignment="Top" Height="60" Width="160" Click="bEnter_Click"/>
        <Button x:Name="bRegistration"
Content="Зарегистрироваться" HorizontalAlignment="Left"
Margin="10,92,0,0" VerticalAlignment="Top" Height="60"
Width="160" Click="bRegistration_Click"/>
        <TextBox x:Name="tbLogin" HorizontalAlignment="Left"
Margin="239,18,0,0" TextWrapping="Wrap" Text=""
VerticalAlignment="Top" Width="120" IsEnabled="False"/>
        <TextBox x:Name="tbPass1" HorizontalAlignment="Left"
Margin="239,54,0,0" TextWrapping="Wrap" Text=""
VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="tbPass2" HorizontalAlignment="Left"
Margin="239,90,0,0" TextWrapping="Wrap" Text=""
VerticalAlignment="Top" Width="120"/>
        <Label Content="Логин" HorizontalAlignment="Left"
Margin="190,13,0,0" VerticalAlignment="Top" Height="27"/>
        <Label Content="Пароль1" HorizontalAlignment="Left"
Margin="183,49,0,0" VerticalAlignment="Top" Height="27"/>
        <Label Content="Пароль2" HorizontalAlignment="Left"
Margin="183,85,0,0" VerticalAlignment="Top" Height="27"/>
        <Button x:Name="bLogin" Content="Залогиниться"
HorizontalAlignment="Left" Margin="10,10,0,0"
VerticalAlignment="Top" Height="60" Width="160" Click="bLogin_Click"/>
    </Grid>
</Window>

